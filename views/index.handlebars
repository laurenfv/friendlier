<h1>Random Acts of Kindness</h1>

<h2>To Do:</h2>

<ul>
  {{#each random_acts}}
    {{#unless done}}
      {{> act/act-block done=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Completed!</h2>

<ul>
  {{#each random_acts}}
    {{#if done}}
      {{> act/act-block done=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add an Act</h2>
<form class="create-form">

  <div class="form-group">
    <label for="act">Name:</label>
    <input type="text" id="act" name="act_name">
  </div>

  <div class="form-group">
    <label for="done">Completed?</label><br>
    <input type="radio" name="done" value="1" checked> No <br>
    <input type="radio" name="done" value="0"> Yes
  </div>

  <button type="submit">Add</button>
</form>